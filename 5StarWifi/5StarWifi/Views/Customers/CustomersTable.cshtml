
@{
    ViewBag.Title = "CustomersTable";
}
@model IEnumerable<_5StarWifi.Models.Customer>

<!--begin::Container-->
<div class="d-flex flex-row flex-column-fluid container">
    <!--begin::Content Wrapper-->
    <div class="main d-flex flex-column flex-row-fluid">
        <!--begin::Subheader-->
        <div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <!--begin::Info-->
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <!--begin::Page Heading-->
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item text-muted">
                                <a href="" class="text-muted">Home</a>
                            </li>
                            <li class="breadcrumb-item text-muted">
                                <a href="" class="text-muted">Customers</a>
                            </li>
                            <li class="breadcrumb-item text-muted">
                                <a href="" class="text-muted">CustomersTable</a>
                            </li>
                        </ul>
                        <!--end::Breadcrumb-->
                    </div>
                    <!--end::Page Heading-->
                </div>
                <!--end::Info-->

            </div>
        </div>
        <!--end::Subheader-->
        <div class="content flex-column-fluid pt-0" id="kt_content">

            <!--begin::Card-->
            <div class="card card-custom">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            View all customers
                            <span class="text-muted pt-2 font-size-sm d-block">Javascript array as data source</span>
                        </h3>
                    </div>

                </div>
                <div class="card-body">
                    
                    <!--begin: table-->
                    <div class="table-responsive-lg">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Password</th>
                                    <th scope="col">Service</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <th>@Html.DisplayFor(modelItem => item.Id)</th>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                    @{
                                        if (item.isSubscribedToCustomer == true)
                                        {
                                            <td><span style="width: 123px;"><span class="label label-success label-dot mr-2"></span><span class="font-weight-bold text-success">Active</span></span></td>
                                        }
                                        else if (item.isSubscribedToCustomer == false)
                                        {
                                            <td><span style="width: 123px;"><span class="label label-danger label-dot mr-2"></span><span class="font-weight-bold text-danger">Inactive</span></span></td>
                                        }
                                    }
                                    @{
                                        switch (item.PaymentStatus)
                                        {
                                            case "Payed":
                                                <td><span style="width: 123px;"><span class="label font-weight-bold label-lg label-light-success label-inline">Payed</span></span></td>
                                                break;
                                            case "Pending":
                                                <td><span style="width: 123px;"><span class="label font-weight-bold label-lg label-light-warning label-inline">Pending</span></span></td>
                                                break;
                                            case "Canceled":
                                                <td><span style="width: 123px;"><span class="label font-weight-bold label-lg label-light-info label-inline">Canceled</span></span></td>
                                                break;
                                            case "Debt":
                                                <td><span style="width: 123px;"><span class="label font-weight-bold label-lg label-light-danger label-inline">Debt</span></span></td>
                                                break;
                                            default:
                                                <td><span style="width: 123px;"><span class="label font-weight-bold label-lg label-light-info label-inline">Unknown</span></span></td>
                                                break;
                                        }

                                    }
                                                <td>

                                                    <div class="progress">
                                                        @{
                                                            switch (item.MembershipTypeId)
                                                            {
                                                                case 1:
                                                                    <div class="progress-bar" role="progressbar" style="width: 8%;" aria-valuenow="8" aria-valuemin="0" aria-valuemax="100">8%</div>
                                                                    break;
                                                                case 2:
                                                                    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                                                    break;
                                                                case 3:
                                                                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                                                                    break;
                                                                default:
                                                                    <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                                                                    break;
                                                            }

                                                        }
                                                    </div>

                                                </td>
                                                                     

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!--end: table-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Content-->
    </div>
    <!--begin::Content Wrapper-->
</div>
<!--end::Container-->
